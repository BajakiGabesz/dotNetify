<d-panel css="@expanderCss">
    <d-collapsible collapsed="true" label="@Label">
        @ChildContent
    </d-collapsible>
</d-panel>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Label { get; set; }

    string expanderCss = @"
margin: 1rem 0;
padding: .5rem;
border-radius: 5px;
border: 1px solid #ccc;
background: #ddd;
[class^='Label__LabelContainer'] { font-weight: bold; }
";
}